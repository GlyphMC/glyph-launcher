{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "glyph-launcher",
  "version": "0.1.0",
  "identifier": "com.github.glyphmc.launcher",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun build"
  },
  "app": {
    "windows": [
      {
        "title": "Glyph Launcher",
        "width": 1000,
        "height": 800,
        "resizable": false,
        "fullscreen": false,
		"label": "main",
		"decorations": false,
		"center": true,
		"focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
